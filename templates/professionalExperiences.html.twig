{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mx-auto px-8">
        <h1 class="text-4xl font-bold text-center mb-4">Liste de mes expériences professionnelles</h1>
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-4">
            {% for professionalExperience in professionalExperiences %}
                {{ component('professional_experience', {
                    companyName: professionalExperience.companyName,
                    jobType: professionalExperience.jobType,
                    description: professionalExperience.description,
                    startDate: professionalExperience.startDate,
                    endDate: professionalExperience.endDate,
                    companyWebsite: professionalExperience.companyWebsite,
                }) }}
            {% else %}
                <p class="text-center">Aucune expérience professionnelle pour le moment</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
