{% extends 'admin.html.twig' %}


{% block body %}
    <div class="container mx-auto px-8">
        <h1 class="text-2xl text-center mt-10 mb-10">
            Liste des versions
        </h1>
        <div class="flex justify-end">
            <a href="{{ path('app_admin_changelog_create') }}" class="focus:outline-none text-white bg-blue-600 hover:bg-blue-700 focus:ring-4 focus:ring-blue-600 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2">Ajouter une version</a>
        </div>
        <div class="relative overflow-x-auto shadow-md rounded-lg">
            <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
                <thead class="text-xs text-gray-700 uppercase bg-gray-200 dark:bg-gray-700 dark:text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        Id
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Nom
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Date de sortie
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Actions
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for changelog in changelogs %}
                    <tr class="bg-white border-b">
                        <th scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap">
                            {{ changelog.id }}
                        </th>
                        <td class="px-6 py-4">
                            {{ changelog.name }}
                        </td>
                        <td class="px-6 py-4">
                            {{ changelog.releasedAt|date('d/m/Y') }}
                        </td>
                        <td class="px-6 py-4 flex">
                            <a href="{{ path('app_admin_changelog_edit', {'id': changelog.id}) }}" class="focus:outline-none text-white bg-yellow-400 hover:bg-yellow-500 focus:ring-4 focus:ring-yellow-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2">Modifier</a>
                            <a href="{{ path('app_admin_changelog_delete', {'id': changelog.id}) }}" class="focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2">Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
